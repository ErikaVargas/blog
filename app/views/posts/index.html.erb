<div class="hero-unit">

<h1> Main Page Listing Posts </h1>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Category</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post, :class => "btn btn-link"  %></td>
        <td><%= post.text %></td>
        <td><%= post.category %></td>
        <td><%= post.created_at.to_date %></td>
        <td><%= link_to 'Like', like_post_path(post), :class =>"btn btn-info" %></td>
        <td><%= link_to 'DisLike', dislike_post_path(post), :class =>"btn btn-inverse" %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Administrative', administrative_post_path, :class => "btn btn-link" %>
<%= link_to 'Report', report_post_path, :class => "btn btn-link" %>



</div>

