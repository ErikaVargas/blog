<div class="hero-unit">

<h1>Report Posts</h1>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Category</th>
      <th>Created Date</th>
      <th>Updated Date</th>
      <th>Number of Comments</th>
      <th>Number of Likes</th>
      <th>Number of Words</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.category %></td>
        <td><%= post.created_at.to_date %></td>
        <td><%= post.updated_at.to_date %></td>
        <td><%= post.comments.count %></td>
        <td><span class="badge badge-info"><%= post.like %></span></td>
        <td><%= post.title.split(" ").count + post.text.split(" ").count %></td>


      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', posts_path, :class => "btn btn-link" %>

</div>