<div class="hero-unit">

<h1> Administrative Screen</h1>
<br>

<p id="notice"><%= notice%></p>
    <%= form_tag administrative_post_path, :method => 'get' do %>
      <%= label_tag "Search in post" %>
      <%= text_field_tag :search %>
      <%= submit_tag "Search", :name => nil, :class => 'btn' %> 
<% end %>



<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th>Date</th>
      <th>Likes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post, :class =>"btn btn-link" %></td>
        <td><%= post.text %></td>
        <td><%= post.created_at.to_date %></td>

        <td><span class="badge badge-info"><%= post.like %></span></td>
        <td><%= link_to 'Show', post, :class => "btn btn-link"  %></td>

        <td><%= link_to 'Edit', edit_post_path(post), :class => "btn btn-link" %></td>
        
        <td><a href="/posts/destroy/<%= post.id %>">Borrar</a></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Back', posts_path, :class => "btn btn-link" %>
<%= link_to 'New Post', new_post_path, :class => "btn btn-link" %>


</div>









